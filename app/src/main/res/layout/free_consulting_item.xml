<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/free_consulting_layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginRight="17dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:layout_gravity="center"
            android:background="@drawable/border_round_imageview">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/free_consulting_img"
                android:src="@drawable/kidneys"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/free_consulting_title"
                android:text="title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/free_consulting_question"
                android:text="question\n question"
                android:textSize="17dp"
                android:maxLines="2"
                android:maxLength="40"
                android:ellipsize="end"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/free_consulting_answer"
            android:text="답변 중"
            android:textColor="#2E7AB6"
            android:background="#E7F4FF"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>