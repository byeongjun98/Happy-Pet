<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_bar"
        android:paddingTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:background="@drawable/border_bottom_line_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_find_type"
            android:layout_centerHorizontal="true"
            android:text="찾기"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back_user_find"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Pet"
        android:layout_gravity="center"
        android:textColor="#ff6a00"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_comment"
        android:text="type"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="17dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_find_type_form"
            android:background="@drawable/border_edittext"
            android:padding="17dp"
            android:layout_marginBottom="12dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_find_next"
            android:text="다음"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            android:padding="17dp"
            android:background="#ff9500"/>
    </LinearLayout>

</LinearLayout>